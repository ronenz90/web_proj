html( lang="en" )
    head

        title CashFlow-Login
        meta( charset='utf-8' )
        meta( http-equiv='X-UA-Compatible', content='IE=edge' )
        meta( name='viewport', content='width=device-width, initial-scale=1.0' )
        meta( name='description', content='Baking Bootstrap Snippets with Jade' )
        //- Bootswatch Theme
        link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")

    body(style="padding-bottom:10rem;")
        script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
        script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )

    .container
        .row
            .col-md-5.col-sm-8.col-xs-12
                .panel.panel-primary
                    .panel-heading Customer Details
                    .panel-body
                        form(method='POST' action='')
                            div.form-group
                                label(for='inputId') Id:
                                input#inputId.form-control(type='text' placeholder='Enter Id' name='inputId')
                            div.form-group
                                label(for='inputFullname') Fullname:
                                input#inputFullname.form-control(type='text' placeholder='Enter Fullname' name='inputFullname')
                            div.form-group
                                label(for='inputEmail') Email:
                                input#inputEmail.form-control(type='text' placeholder='Enter Email' name='inputEmail')
                            div.form-group
                                label(for='inputBirthday') Birthday:
                                input#inputBirthday.form-control(type='text' placeholder='Enter Birthday' name='inputBirthday')
                            div.form-group
                                label(for='inputMaritalstatus') Marital status:
                                input#inputMaritalstatus.form-control(type='text' placeholder='Enter Marital status' name='inputMaritalstatus')
                            div.form-group
                                label(for='inputCity') City:
                                input#inputCity.form-control(type='text' placeholder='Enter City' name='inputCity')
                            div.form-group
                                label(for='inputTel') Tel:
                                input#inputTel.form-control(type='text' placeholder='Enter Tel' name='inputTel')
                            br
                            button.btn.btn-primary(type='submit') Submit