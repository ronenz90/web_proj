include mixins
doctype
html( lang="en" )
    head

        title Communication
        meta( charset='utf-8' )
        meta( http-equiv='X-UA-Compatible', content='IE=edge' )
        meta( name='viewport', content='width=device-width, initial-scale=1.0' )
        meta( name='description', content='Baking Bootstrap Snippets with Jade' )
        //- Bootswatch Theme
        link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")

    body(style="padding-bottom:10rem;")
        script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
        script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )

    .container
        .row
            .col-md-5.col-sm-8.col-xs-12
                .panel.panel-primary
                    .panel-heading Change Your Password
                    .panel-body
                        form(method='POST' action='')
                            div.form-group
                                label(for='inputOldPassword') Old Password:
                                input#inputOldPassword.form-control(type='password' placeholder='Enter Old Password' name='inputOldPassword')
                            div.form-group
                                label(for='inputNewPassword') New Password:
                                input#inputNewPassword.form-control(type='password' placeholder='Enter New Password' name='inputNewPassword')
                            div.form-group
                                label(for='inputRepeat') Repeat:
                                input#inputRepeat.form-control(type='password' placeholder='Enter Repeat' name='inputRepeat')

                                br
                                button.btn.btn-primary(type='submit') Submit